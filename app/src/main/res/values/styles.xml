<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Base application theme. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- Action Bar Theme -->
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <!-- Overlay menu theme -->
    <style name="MyPopUpTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>


    <!--Player View style-->
    <style name="PlayerView">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!-- TEXT STYLES -->
    <style name="TextDisplay">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <!-- Song activity -->
    <style name="TitleListItemTextStyle" parent="TextDisplay">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubheadingListItemTextStyle" parent="TextDisplay">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Now Playing activity -->

    <style name="TitleText" parent="TextDisplay">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ArtistText" parent="TextDisplay">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AlbumText" parent="TextDisplay">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Albums activity-->
    <style name="TitleGridItemTextStyle" parent="TextDisplay">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubheadingGridItemTextStyle" parent="TextDisplay">
        <item name="android:textSize">14sp</item>
    </style>

    <!--Artists Activity-->
    <style name="ArtistsListItemTextStyle" parent="TextDisplay">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
