<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicapp.ArtistsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/artists_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:elevation="@dimen/toolbar_elevation"
        android:theme="@style/MyActionBarTheme"
        app:popupTheme="@style/MyPopUpTheme" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist_list"
        android:paddingTop="@dimen/vertical_margin_app"
        android:paddingBottom="@dimen/vertical_margin_app"
        android:paddingRight="@dimen/vertical_margin_app"
        android:paddingLeft="@dimen/vertical_margin_app"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/artist_list_divider_height"/>

</LinearLayout>
